<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBBBB"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notification"
                android:adjustViewBounds="true"
                android:maxWidth="32dp"
                android:maxHeight="32dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_noification"
            android:text="Notifications"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fingerprint"
                android:adjustViewBounds="true"
                android:maxWidth="32dp"
                android:maxHeight="32dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_fingerprint"
            android:text="Fingerprint"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Support"
         android:textColor="#000000"
         android:textSize="25sp"
         android:layout_marginLeft="8dp"
         />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBBBB"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_feedback"
                android:adjustViewBounds="true"
                android:maxWidth="32dp"
                android:maxHeight="32dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_Feedback"
            android:text="Feedback"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_faq"
                android:adjustViewBounds="true"
                android:maxWidth="32dp"
                android:maxHeight="32dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_faq"
        android:text="FAQ"
            android:textColor="#000000"
       android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_terms_and_conditions"
                android:adjustViewBounds="true"
                android:maxWidth="32dp"
                android:maxHeight="32dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_terms_and_conditions"
            android:text="Terms and Conditions"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_information"
                android:adjustViewBounds="true"
                android:maxWidth="32dp"
                android:maxHeight="32dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_about_our_App"
        android:text="About our App"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="#ABE7B2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>